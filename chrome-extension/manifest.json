{
  "name": "Web Content Safety Classifier",
  "version": "1.0",
  "description": "Classifies web content as Hate Speech, Moderate, or Safe using a RAG model",
  "manifest_version": 3,
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "18": "images/icon18.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "18": "images/icon18.png"
  }
}