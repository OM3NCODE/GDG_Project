{
  "manifest_version": 3,
  "name": "Web Content Scraper",
  "version": "1.0",
  "description": "Scrapes text content from webpages",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}